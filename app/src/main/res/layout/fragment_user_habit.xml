                android:textColor="#2c2c2c"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/habit_text_sport_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

