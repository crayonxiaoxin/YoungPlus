                android:textSize="14sp" />

            <EditText
                android:id="@+id/habit_text_stool_remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="例如：去得順嗎? 有沒有去不乾淨的感覺? 顏色? 等等"
                android:minLines="2"
                android:textSize="14sp" />
