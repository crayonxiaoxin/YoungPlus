<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="maxHeight" format="dimension" />

    <attr name="title" format="string" />
    <attr name="hint" format="string" />
    <attr name="text_width" format="dimension" />
    <attr name="edit_lines" format="integer" />
    <attr name="input_type" format="enum">
        <enum name="text" value="1" />
        <enum name="number" value="2" />
        <enum name="numberDecimal" value="3" />
        <enum name="password" value="4" />
    </attr>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" />
    </declare-styleable>

    <declare-styleable name="SimpleEditText">
        <attr name="title" />
        <attr name="hint" />
        <attr name="text_width" />
        <attr name="edit_lines" />
        <attr name="input_type" />
    </declare-styleable>
</resources>